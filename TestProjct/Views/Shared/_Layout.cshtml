<div class="container">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/Home">Test Project</a>
			</div>
			@if (HttpContextHelper.IsAutorize)
			{
				<div class="navbar-brand">
					<p>Welcome : @HttpContextHelper.GetcurrentUser().Name</p>
				</div>
			}
			<div id="navbar" class="navbar-collapse navbar-right">
				<ul class="nav navbar-nav">
					@if (HttpContextHelper.IsAutorize)
					{
						if (HttpContextHelper.GetcurrentUser().Roles == TestProjct.Models.Roles.MusterUser)
						{
							<li><a href="/MasterPage/Index">Master Page</a></li>
						}
						<li class="pull-right"><a href="/User/Logout">Logout</a></li>
					}
					else
					{
						<li class=""><a href="/User/Login">Login</a></li>
					}
				</ul>
			</div>
		</div>
	</nav>
	<div id="info"></div>
	<div class="jumbotron">
		@RenderBody()
	</div>
</div>
